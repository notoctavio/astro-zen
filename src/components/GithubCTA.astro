---
interface Props {
  githubUrl: string;
}

const { githubUrl } = Astro.props;
---

<section class="py-24">
  <div
    class="relative rounded-2xl border border-neutral/20 bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-[length:128px] before:bg-repeat before:opacity-[5%] before:content-['']"
  >
    <div class="flex flex-col items-center justify-center px-6 py-16 text-center">
      <h2
        class="mb-4 font-serif text-4xl font-bold tracking-tighter text-white md:text-5xl"
      >
        See More on GitHub
      </h2>
      <p class="mb-8 max-w-2xl text-base text-neutral md:text-lg">
        Explore more of my projects, contributions, and open-source work on my
        GitHub profile. From AI and machine learning experiments to full-stack
        applications.
      </p>
      <a
        href={githubUrl}
        target="_blank"
        class="group inline-flex items-center gap-2 rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white transition-all hover:bg-primary/90 hover:shadow-lg hover:shadow-primary/20"
      >
        <svg
          class="h-5 w-5"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Visit GitHub Profile</span>
        <svg
          class="h-4 w-4 transition-transform group-hover:translate-x-1"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

