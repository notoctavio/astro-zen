---
import Section from "./Section.astro";
import type { CertificationsProps } from "@types";

interface Props {
  certifications: CertificationsProps[];
}

const { certifications } = Astro.props;
---

<Section text="Licenses & Certifications" href="certifications">
  <div class="grid gap-6">
    {
      certifications.map(({ name, issuer, issueDate, credentialID, credentialURL }) => (
        <a
          href={credentialURL}
          target="_blank"
          class="group block rounded-2xl border border-neutral/20 bg-[#1c232d]/50 p-6 backdrop-blur-sm transition-all hover:border-primary/40 hover:bg-[#1c232d]/70"
        >
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <h3 class="mb-2 font-serif text-xl font-semibold text-white group-hover:text-primary transition-colors">
                {name}
                <span class="ml-2 inline-block transition-transform group-hover:translate-x-1">
                  <svg class="inline h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                </span>
              </h3>
              <p class="mb-1 text-base text-neutral">{issuer}</p>
              <p class="text-sm text-neutral/70">Issued: {issueDate}</p>
              {credentialID && (
                <p class="mt-2 text-xs text-neutral/60">
                  Credential ID: {credentialID}
                </p>
              )}
            </div>
          </div>
        </a>
      ))
    }
  </div>
</Section>

